@{
    ViewData["Title"] = "Home Page";
}
@model ProductModel
<nav class="form-search navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur" navbar-scroll="true">
    <div class="form-search">
        <form class="d-flex">
            <input class="form-control me-2 bg-transparent" type="text" placeholder="Search" aria-label="Search">
        </form>
    </div>
</nav>
  <div class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-12">
          <div class="card mb-4">
            <div>
              <button style="float: right; margin-right: 30px;" type="button" class="btn btn-primary btn-add-different-color" data-bs-toggle="modal" data-bs-target="#addCateProduct">Add</button>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
              <div class="table-responsive p-0">
                <table class="table align-items-center mb-0">
                  <thead>
                    <tr>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder ">ID</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder">Name</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder">Image</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder">Created time</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder">Operation</th>
                    </tr>
                  </thead>
                  <tbody>
                        @foreach(var c in Model.Categories){

                        <tr>
                          <td>
                            <div class="px-2 py-1">
                              <div class="text-center d-flex flex-column justify-content-center">
                                <h6 class="mb-0 text-sm">@c.Id</h6>
                              </div>
                            </div>
                          </td>
                          <td>
                            <p class="text-center text-xs font-weight-bold mb-0">@c.Name</p>
                          </td>
                          <td class="align-middle text-center">
                            <img src="@c.Image" class="avatar avatar-sm me-3" alt="">
                          </td>
                          <td class="align-middle text-center">
                              <div class="text-center d-flex flex-column justify-content-center">
                                <h6 class="mb-0 text-sm">@c.CreatedTime</h6>
                              </div>
                          </td>
                          <td class="align-middle" style="text-align: center;">
                            <button style="margin-right: 10px;" type="button" class="btn btn-primary btn-update-different-color" data-bs-toggle="modal" data-bs-target="#updateCate">update</button>  
                            <button style="margin-left: 10px;" type="button" class="btn btn-primary btn-delete-different-color" data-bs-toggle="modal" data-bs-target="#deleCate">delete</button>
                          </td>
                        </tr>
                        }
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Modal add category -->
      <div class="modal fade" id="addCateProduct" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Add new category</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form asp-controller="home" asp-action="add" method=post enctype="multipart/form-data">
                <div class="mb-3">
                  <label for="recipient-name" class="col-form-label">Name:</label>
                  <input type="text" class="form-control" name="Name">
                </div>
                <div class="mb-3">
                  <label for="recipient-name" class="col-form-label">Image:</label>
                  <input type="file" class="form-control" name="Image">
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Exit</button>
                  <button type="submit" class="btn btn-primary btn-add-different-color">Add</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>

      <!-- Model update product -->
      <div class="modal fade" id="updateCate" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Sửa loại sản phẩm</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form>
                <div class="mb-3">
                  <label for="recipient-name" class="col-form-label">ID loại sản phẩm:</label>
                  <input type="text" class="form-control" id="recipient-name">
                </div>
                <div class="mb-3">
                  <label for="recipient-name" class="col-form-label">Tên loại sản phẩm:</label>
                  <input type="text" class="form-control" id="recipient-name">
                </div>
                <div class="mb-3">
                  <label for="recipient-name" class="col-form-label">Hình ảnh:</label>
                  <input type="file" class="form-control" id="recipient-name">
                </div>
              </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Thoát</button>
              <button type="button" class="btn btn-primary">Lưu</button>
            </div>
          </div>
        </div>
      </div>

      <!-- Modal delete product-->
      <div class="modal fade" id="deleCate" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Xóa loại sản phẩm</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              Bạn có muốn xóa loại sản phẩm này không?
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Thoát</button>
              <button type="button" class="btn btn-primary">Xóa</button>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>