@{
    ViewData["Title"] = "Home Page";
}
@model HomeModel
<!-- hero area -->
<div class="hero-area hero-bg">
	<div class="container">
		<div class="row">
			<div class="col-lg-9 offset-lg-2 text-center">
				<div class="hero-text">
					<div class="hero-text-tablecell">
						<p class="subtitle">Beautiful & High fashion</p>
						<h1>Welcome to Tote Shop!</h1>
						<div class="hero-btns">
							<a href="shop.html" class="boxed-btn">Collection</a>
							<a href="contact.html" class="bordered-btn">Contact Us</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end hero area -->

<!-- Category section -->
<div class="product-section  pt-80 pb-80">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 offset-lg-2 text-center">
				<div class="section-title">
					<h3><span class="orange-text">Our </span>Categories</h3>
				</div>
			</div>
		</div>

		<div style="display:flex; justify-content: space-evenly">
			@foreach (var c in Model.Categories)
			{
			<div class="col-lg-4 col-md-6 text-center">
				<div class="single-product-item">
					<div class="product-image">
						<a asp-controller="shop" asp-action="Category" asp-route-Id="@c.Id"><img src="@c.Image" alt=""></a>
					</div>
					<h3>@c.Name</h3>
				</div>
			</div>
			}
		</div>
	</div>
</div>
<!-- end category section -->
<!-- features list section -->
<div class="features-bg pt-80 pb-80">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 offset-lg-2 text-center">
				<div class="section-title">
					<h3><span class="orange-text">TOTESHOP</span>'S COMMITION</h3>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
				<div class="list-box d-flex align-items-center">
					<div class="list-icon">
						<i class="fas fa-shipping-fast"></i>
					</div>
					<div class="content">
						<h3>Free delivery</h3>
						<p>Free for order have price over 299K</p>
					</div>
				</div>
			</div>
			<div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
				<div class="list-box d-flex align-items-center">
					<div class="list-icon">
						<i class="fas fa-phone-volume"></i>
					</div>
					<div class="content">
						<h3>24/7 support</h3>
						<p>Support all day!</p>
					</div>
				</div>
			</div>
			<div class="col-lg-4 col-md-6">
				<div class="list-box d-flex justify-content-start align-items-center">
					<div class="list-icon">
						<i class="fas fa-sync"></i>
					</div>
					<div class="content">
						<h3>Refund</h3>
						<p>Can refund prodct within 7 days!</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end features list section -->
<!-- product section -->
<div class="product-section mt-100 mb-100">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 offset-lg-2 text-center">
				<div class="section-title">
					<h3><span class="orange-text">Our </span>Products</h3>
				</div>
			</div>
		</div>

		<div class="row">
			@foreach (var t in Model.Totes)
			{
				<div class="col-lg-4 col-md-6 offset-md-3 offset-lg-0 text-center">
					<div class="single-product-item">
						<div class="product-image">
							<a asp-controller="shop" asp-action="detail" asp-route-Id="@t.Id"><img src="@t.Image" alt=""></a>
						</div>
						<h3>@t.Name</h3>
						<p class="product-price"> @t.Price$ </p>
						<button onclick="addToCart(@t.Id)" type="button" class="btn btn-outline-secondary btn-lg"><i class="fas fa-shopping-cart"></i> Add to Cart</button>
					</div>
				</div>
			}

		</div>

		<div class="row">
			<div class="col-lg-12 text-center">
				<div class="pagination-wrap">
					<ul>
						<li><a href="#">Prev</a></li>
						<li><a href="#">1</a></li>
						<li><a class="active" href="#">2</a></li>
						<li><a href="#">3</a></li>
						<li><a href="#">Next</a></li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end product section -->
<!-- logo carousel -->
<div class="logo-carousel-section">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="logo-carousel-inner">
					<div class="single-logo-item">
						<img src="~/img/company-logos/1.png" alt="">
					</div>
					<div class="single-logo-item">
						<img src="~/img/company-logos/2.png" alt="">
					</div>
					<div class="single-logo-item">
						<img src="~/img/company-logos/3.png" alt="">
					</div>
					<div class="single-logo-item">
						<img src="~/img/company-logos/4.png" alt="">
					</div>
					<div class="single-logo-item">
						<img src="~/img/company-logos/5.png" alt="">
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end logo carousel -->
